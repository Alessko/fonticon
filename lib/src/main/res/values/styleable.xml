<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CompoundDrawables">
        <attr name="iconLeft" format="reference"/>
        <attr name="iconTop" format="reference"/>
        <attr name="iconRight" format="reference"/>
        <attr name="iconBottom" format="reference"/>
    </declare-styleable>
    <declare-styleable name="FontIconDrawable">
        <attr name="text" format="string|reference"/>
        <attr name="textColor" format="color|reference"/>
        <attr name="textSize" format="dimension|reference"/>
        <attr name="fitting" format="enum">
            <enum name="none" value="0"/>
            <enum name="match_width_height" value="1"/>
            <enum name="match_text_size" value="2"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="FontIconView">
        <attr name="overridePressed" format="boolean"/>
        <attr name="pressedGlowColor" format="color|reference"/>
        <attr name="pressedGlowRadius" format="dimension|reference"/>
    </declare-styleable>
</resources>
